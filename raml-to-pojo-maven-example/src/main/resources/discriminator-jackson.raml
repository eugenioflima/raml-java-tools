#%RAML 1.0 Library
uses:
  ramltopojo: ramltopojo.raml
types:
  PetResponse:
    (ramltopojo.plugins):
      - name: core.jackson2
    type: object
    properties:
      myPet: Animal

  Animal:
    (ramltopojo.plugins):
      - name: core.jackson2
    type: object
    discriminator: animalType
    properties:
      animalType: string

  Cat:
    (ramltopojo.plugins):
      - name: core.jackson2
    type: Animal
    discriminatorValue: CAT
    properties:
      legs: integer

  Fish:
    (ramltopojo.plugins):
      - name: core.jackson2
    type: Animal
    discriminatorValue: FISH
    properties:
      fins: integer
